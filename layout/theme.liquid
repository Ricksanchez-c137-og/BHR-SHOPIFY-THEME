<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Meta Tags -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="{{ shop.meta_description | default: 'Welcome to our store' }}">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- Favicon -->
  <!--<link rel="icon" href="{{ 'favicon.ico' | asset_url }}" type="image/x-icon">-->

  <!-- Shopify Theme Header -->
  {{ content_for_header }}

  <!-- Preload Key Assets -->
  {{ 'theme.css' | asset_url | stylesheet_tag: preload: true }}
  {{ 'theme.js' | asset_url | preload_tag: as: 'script' }}

  <!-- Styles -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Announcement Bar -->
  {% section 'announcement-bar' %}

  <!-- Header -->
  {% section 'header-main' %}

  <!-- Main Content -->
  <main id="main" role="main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  {% section 'footer-main' %}

  <!-- Scripts -->
  <script>
    // Ensure main content is focused for accessibility after navigation
    document.getElementById('main').focus();
  </script>

  <!-- Shopify Theme Scripts -->
  <script src="{{ 'theme.js' | asset_url }}" async></script>
</body>
</html>
