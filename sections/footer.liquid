<footer class="footer-main">
  <div class="footer-sec-1">
    {%- if section.blocks.size == 0 -%}
      <div class="footer-column">
        <p><a href="#">Guides</a></p>
        <p><a href="#">Terms of Sale</a></p>
        <p><a href="#">Terms of Use</a></p>
        <p><a href="#">Privacy Policy</a></p>
      </div>
      <div class="footer-column">
        <p><a href="#">About Us</a></p>
        <p><a href="#">Contact</a></p>
        <p><a href="#">FAQs</a></p>
        <p><a href="#">Support</a></p>
      </div>
      <div class="footer-column">
        <p><a href="#">Careers</a></p>
        <p><a href="#">Press</a></p>
        <p><a href="#">Sustainability</a></p>
        <p><a href="#">Accessibility</a></p>
      </div>
    {% else %}
      {% for block in section.blocks %}
        <div class="footer-column">
          <p><a href="{{ block.settings.link }}">{{ block.settings.text | escape }}</a></p>
        </div>
      {% endfor %}
    {% endif %}
  </div>
  <div class="footer-sec-2">
    <p>&copy; {{ 'now' | date: '%Y' }} Your Company. All Rights Reserved.</p>
  </div>
</footer>

<style>
  /* Footer Main Styling */
  .footer-main {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    padding: 40px 20px;
    font-family: Arial, sans-serif;
    font-size: 14px;
  }

  /* Section 1: Dynamic Columns */
  .footer-sec-1 {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
  }

  .footer-column {
    flex: 1;
    min-width: 200px; /* Ensures columns stack neatly */
    max-width: 250px;
  }

  .footer-column p {
    margin: 5px 0;
  }

  .footer-column a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: #007acc;
  }

  /* Section 2: Bottom Section */
  .footer-sec-2 {
    text-align: center;
    margin-top: 20px;
    font-size: 12px;
    color: #aaa;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-sec-1 {
      flex-direction: column;
      align-items: center;
    }

    .footer-column {
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#F4F4F4"
    },
    {
      "type": "font_picker",
      "id": "font",
      "label": "Font Style",
      "default": "Arial"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Link Text",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Footer"
    }
  ]
}
{% endschema %}
