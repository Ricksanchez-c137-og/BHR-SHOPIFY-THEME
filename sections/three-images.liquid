      "id": "image",
      "label": "Image 1",
      "info": "400 x 500px recommended"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text for Image 1",
      "default": "Default Text 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2",
      "info": "400 x 500px recommended"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text for Image 2",
      "default": "Default Text 2"
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image 3",
      "info": "400 x 500px recommended"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text for Image 3",
      "default": "Default Text 3"
    }
  ],
  "presets": [
    {
      "name": "Three Images"
    }
  ]
}
{% endschema %}
