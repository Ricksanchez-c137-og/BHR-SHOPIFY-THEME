<section class="three-images-section">
  <div class="three-images-wrapper">
    <!-- Image 1 -->
    {% if section.settings.image != blank %}
      <div class="image-container">
        <div class="image one-user" style="background-image: url('{{ section.settings.image | image_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text1 | default: "Default Text 1" }}</h1>
      </div>
    {% else %}
      <div class="image-container">
        <div class="image one" style="background-image: url('{{ 'one.png' | asset_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text1 | default: "Default Text 1" }}</h1>
      </div>
    {% endif %}

    <!-- Image 2 -->
    {% if section.settings.image2 != blank %}
      <div class="image-container">
        <div class="image two-user" style="background-image: url('{{ section.settings.image2 | image_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text2 | default: "Default Text 2" }}</h1>
      </div>
    {% else %}
      <div class="image-container">
        <div class="image two" style="background-image: url('{{ 'two.png' | asset_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text2 | default: "Default Text 2" }}</h1>
      </div>
    {% endif %}

    <!-- Image 3 -->
    {% if section.settings.image3 != blank %}
      <div class="image-container">
        <div class="image three-user" style="background-image: url('{{ section.settings.image3 | image_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text3 | default: "Default Text 3" }}</h1>
      </div>
    {% else %}
      <div class="image-container">
        <div class="image three" style="background-image: url('{{ 'three.png' | asset_url }}');"></div>
        <h1 class="overlay-text">{{ section.settings.text3 | default: "Default Text 3" }}</h1>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .three-images-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    background-color: #f4f4f4;
  }

  .three-images-wrapper {
    display: flex;
    width: 100%;
    max-width: 1200px;
    gap: 10px;
  }

  .image-container {
    position: relative;
    width: 33.333%;
    height: 500px;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    transition: transform 0.3s ease-in-out;
  }

  .image-container:hover .image {
    transform: scale(1.1);
  }

  .overlay-text {
    position: absolute;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
    color: white;
    font-size: 24px;
    font-weight: bold;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
    text-align: center;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .three-images-wrapper {
      flex-direction: column;
      gap: 20px;
    }

    .image-container {
      width: 100%;
    }

    .overlay-text {
      font-size: 18px;
    }
  }
</style>

